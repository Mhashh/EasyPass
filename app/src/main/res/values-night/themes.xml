<resources>
    <!-- Base application theme. -->
    <style name="Theme.EasyPass" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">@color/text_view_color_night</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/night_primary</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/text_view_night</item>
        <item name="android:navigationBarColor">@color/cardview_dark_background</item>
        <item name="android:buttonStyle">@style/button_night</item>
        <item name="android:editTextStyle">@style/edit_text_night</item>
        <item name="bottomNavigationStyle">@style/bottom_navigation_night</item>
    </style>
</resources>