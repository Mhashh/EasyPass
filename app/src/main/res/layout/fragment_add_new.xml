<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="opens camera to scan text for password"
    tools:context=".fragments.AddNewFragment">

    <EditText
        android:id="@+id/edit_text_app"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_input"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:hint="app/web name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_acc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_input"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:hint="user/account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_app" />

    <EditText
        android:id="@+id/edit_text_pass"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_input"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:hint="password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_acc" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="154dp"
        android:text="Add new Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_pass" />

    <ImageButton
        android:id="@+id/app_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:contentDescription="opens camera to scan text for app or site name"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toEndOf="@+id/edit_text_app"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/acc_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="23dp"
        android:contentDescription="opens camera to scan text for account name"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edit_text_acc"
        app:layout_constraintTop_toBottomOf="@+id/app_cam" />

    <ImageButton
        android:id="@+id/pass_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="23dp"
        android:contentDescription="opens camera to scan text for password"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toEndOf="@+id/edit_text_pass"
        app:layout_constraintTop_toBottomOf="@+id/acc_cam" />


</androidx.constraintlayout.widget.ConstraintLayout>